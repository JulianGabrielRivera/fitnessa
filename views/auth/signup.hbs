<div class='main_container'>

  <form
    action='/signup'
    method='POST'
    class='form_container'
    enctype='multipart/form-data'
  >

    <h2>Sign Up</h2>
    <div class='email_and_password'>
      <div>
        <label for='myEmail'>Email:</label>
        <input id='myEmail' type='email' name='email' placeholder='Email' />
      </div>
      <div>
        <label for='myPassword'>Password:</label>
        <input
          id='myPassword'
          type='password'
          name='password'
          placeholder='Password'
        />
        <label for='myName'>Name:</label>
        <input id='myName' type='text' name='name' placeholder='Name' />

        <label for='myTime'>Time:</label>
        <input id='myTime' type='text' name='time' placeholder='Workout Time' />

        <label for='myImage'>Image:</label>
        <input type='file' name='profile-image' />
        {{#if errorMessage}}
          <p class='error'>{{errorMessage}}</p>
        {{/if}}
      </div>
    </div>

    <button type='submit' class='signup_and_login'>CREATE ACCOUNT</button>

  </form>
  <div class='api_container'>

    {{#each api.data.results}}

      <img src='{{image}}' alt='' class='api_img' />
    {{/each}}
  </div>

</div>